{
  "name": "xsoar",
  "displayName": "Cortex XSOAR",
  "description": "Upload, Validate and Format Cortex XSOAR entities.",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.54.0"
  },
  "publisher": "PaloAltoNetworks",
  "categories": [
    "Other"
  ],
  "repository": "github:demisto/vscode-extension",
  "activationEvents": [
    "onCommand:xsoar.load",
    "onCommand:xsoar.loadScript",
    "onCommand:xsoar.upload",
    "onCommand:xsoar.format",
    "onCommand:xsoar.validate",
    "onCommand:xsoar.updateReleaseNotes",
    "onCommand:xsoar.validateUsingGit",
    "onCommand:xsoar.updateDSDK",
    "onCommand:xsoar.lint",
    "onCommand:xsoar.lintUsingGit",
    "onCommand:xsoar.showProblems",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xsoar.showProblems",
        "title": "Show Problems",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.load",
        "title": "Load Integration",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.loadScript",
        "title": "Load Script",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.upload",
        "title": "Upload",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.lint",
        "title": "Lint With Tests",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.lintNoTests",
        "title": "Lint",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.lintUsingGit",
        "title": "Lint Using Git",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.format",
        "title": "Format",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.validate",
        "title": "Validate",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.validateUsingGit",
        "title": "Validate Using Git",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.updateReleaseNotes",
        "title": "Update Release Notes",
        "category": "XSOAR"
      },
      {
        "command": "xsoar.updateDSDK",
        "title": "Install/Update Demisto-SDK",
        "category": "XSOAR"
      }
    ],
    "configuration": {
      "title": "Cortex XSOAR",
      "properties": {
        "xsoar.autoFindProblems.getProblems": {
          "type": "boolean",
          "default": true,
          "description": "Auto-read problems from demisto-sdk log file."
        },
        "xsoar.autoFindProblems.reportPath": {
          "type": "string",
          "default": ".demisto-sdk-report",
          "markdownDescription": "The name of the file to write reports to. You can turn this option on and off using `#xsoar.autoFindProblems.getProblems#`. The file will be located in the local workspace."
        },
        "xsoar.lint.patterns": {
          "type": "array",
          "default": [
            "**/Packs/*/Integrations/**",
            "**/Packs/*/Scripts/**"
          ],
          "description": "Patterns to enable linters on. glob format"
        },
        "xsoar.demistoSdkPath": {
          "type": "string",
          "default": "demisto-sdk",
          "description": "The command to run demisto-sdk. Can point to a specific environment."
        },
        "xsoar.lint.showOnSaveTerminal": {
          "type": "boolean",
          "default": false,
          "description": "If true, will show the running process of demisto-sdk in the terminal windows and will not dispose it after finish."
        },
        "xsoar.lint.linter.validate": {
          "type": "boolean",
          "default": true,
          "description": "Whether to run the validate command on the files. (Checks the .yml file)"
        },
        "xsoar.lint.linter.lint": {
          "type": "boolean",
          "default": true,
          "description": "Whether to run the lint command on the files. (Checks the code file)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run -S esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/html-validator": "^5.0.0",
    "@types/minimatch": "^3.0.4",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "esbuild": "^0.12.5",
    "eslint": "^7.28.0",
    "html-validator": "^5.1.17",
    "mocha": "^8.2.1",
    "ts-loader": "^9.2.2",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "minimatch": "^3.0.4",
    "yaml": "^1.10.2"
  }
}
